# Application Settings
APP_NAME=NautScan
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Database URLs
DATABASE_URL=postgresql://nautscan:nautscan@postgres:5432/nautscan
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=nautscan

# Network Monitoring
CAPTURE_INTERFACE=eth0
PACKET_BUFFER_SIZE=65535
MAX_PACKETS_PER_FILE=1000000

# External Services
IPINFO_TOKEN=your-ipinfo-token
VIRUS_TOTAL_API_KEY=your-virustotal-key
TOR_EXIT_NODE_LIST_URL=https://check.torproject.org/exit-addresses

# AI Settings
MODEL_PATH=./models/anomaly_detection
INFERENCE_BATCH_SIZE=32
DETECTION_THRESHOLD=0.85

# WebSocket
WS_HEARTBEAT_INTERVAL=30
MAX_CONNECTIONS=1000

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true 